pipeline {
    agent any

    environment {
        KUBECTL = "kubectl"
        IMAGE_TAG = "${env.BUILD_NUMBER}"
    }


    stages {
        stage("Build Docker Image") {
            steps {
            dir("subscription-service"){
                sh """
                    mvn clean install -DskipTests=true
                    mvn test
                    docker build -t subscription-service:\$IMAGE_TAG .
                    minikube image load subscription-service:\$IMAGE_TAG
                    docker save subscription-service:\$IMAGE_TAG | docker exec -i minikube docker load
                """
                }
            }
        }

        stage("Deploy to Kubernetes") {
            steps {
                sh """
                    sed "s/TAG_PLACEHOLDER/\$IMAGE_TAG/" deployment.yml > deployment-with-image.yml
                    \$KUBECTL apply -f deployment-with-image.yml
                    \$KUBECTL apply -f service.yml

                """
            }
        }
    }
}
